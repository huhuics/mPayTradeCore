<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

	<!-- 设定缓存的默认数据过期策略 -->
	<defaultCache maxElementsInMemory="10000" eternal="false"
		overflowToDisk="false" timeToIdleSeconds="10" timeToLiveSeconds="20"
		diskPersistent="false" diskExpiryThreadIntervalSeconds="120" />

	<cache name="merchantInfoCache" maxElementsInMemory="1000"
		eternal="false" timeToIdleSeconds="4" timeToLiveSeconds="20" />

	<cache name="acquirerInfoCache" maxElementsInMemory="1000"
		eternal="false" timeToIdleSeconds="4" timeToLiveSeconds="20" />

</ehcache>